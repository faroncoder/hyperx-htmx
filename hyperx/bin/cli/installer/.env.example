### Add this to your .env file ##

# Localization
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# Django Apps
ROOT_URLCONF=urls
ASGI_APPLICATION=asgi.application

# HyperX Configuration
HYPERX_AUTO_VALIDATE_HTMX=True
HYPERX_AUTO_PARSE_XTAB=True
HYPERX_SECURITY_LOGGING=True
HYPERX_PERFORMANCE_TRACKING=True
HYPERX_STRICT_XTAB_VALIDATION=False

# HyperX Security
HYPERX_RATE_LIMITING=True
HYPERX_PATTERN_DETECTION=True
HYPERX_AUTO_BLOCKING=False
HYPERX_MAX_REQUESTS_PER_MINUTE=60

# API Keys
OPENAI_API_KEY=your-openai-api-key-here